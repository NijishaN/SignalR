<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SignalR.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label Text="Name" />
            <Entry x:Name="name" Placeholder="Your name..." />

            <Label Text="Comments" />
            <Entry x:Name="comment" Placeholder="Your comment..." />

            <Button
                x:Name="sendBtn"
                Clicked="SendBtnClicked"
                HorizontalOptions="Center"
                Text="Send" />

            <Label x:Name="comments" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
